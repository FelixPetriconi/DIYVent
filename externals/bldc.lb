def init(module):
    module.name = "bldc"

def prepare(module, options):
    return True

def build(env):
    env.outbasepath = "bldc"
    env.copy("bldc/buffer.h", "buffer.h")
    env.copy("bldc/buffer.c", "buffer.c")
    env.copy("bldc/crc.h", "crc.h")
    env.copy("bldc/crc.c", "crc.c")
    env.copy("bldc/datatypes.h", "datatypes.h")
